{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "watch": true,
    "outDir": "dist"
  },
  "extends": "./tsconfig.extend",
  "exclude": [
    "dist",
    "node_modules",
    "src/config.json",
    "plugins",
    "template"
  ]
}
