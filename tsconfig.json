{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "watch": true,
    "sourceRoot": "core",
    "outDir": "dist"
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
